    function Run() {
      const runButton = document.getElementById('run')
      runButton.disabled = true;
      setTimeout(NormalizeRun,3000)
    }
    function NormalizeRun() {
      const runButton = document.getElementById('run')
      runButton.disabled = false;      
    }

    function show_input(){
        var show = document.getElementById("showinput");
        var hide = document.getElementById("hideinput");
        var input_field = document.getElementById("input");
        show.style.display = 'none';
        hide.style.display = 'inline';
        input_field.style.display = 'block';
    }
    
    function hide_input(){
        var show = document.getElementById("showinput");
        var hide = document.getElementById("hideinput");
        var input_field = document.getElementById("input");
        show.style.display = 'inline';
        hide.style.display = 'none';
        input_field.style.display = 'none';
    }
    function getDefaultCode(val){
      switch (val) {
        case 'c':
          return `//c\n\n#include <stdio.h>\n\nint main()\n{\n\tprintf("Hello, world!\\n");\n}`;
        case 'c99':
          return `//c\n\n#include <stdio.h>\n\nint main()\n{\n\tprintf("Hello, world!\\n");\n}`;
        case 'cpp':
          return `//g++  7.4.0\n\n#include <bits/stdc++.h>\nusing namespace std;\n\nint main()\n{\n\cout<<"Hello, world!\\n";\n}`;
        case 'cpp14':
          return `//c++14  7.4.0\n\n#include <bits/stdc++.h>\nusing namespace std;\n\nint main()\n{\n\cout<<"Hello, world!\\n";\n}`;
        case 'cpp17':
          return `//c++17  7.4.0\n\n#include <bits/stdc++.h>\nusing namespace std;\n\nint main()\n{\n\cout<<"Hello, world!\\n";\n}`;
        case 'java':
          return `//'main' method must be in a public class 'Main'.\n//openjdk version '11.0.5'\n\nimport java.util.*;\nimport java.lang.*;\n\npublic class Main\n{\n\tpublic static void main(String args[])\n\t{\n\t\tSystem.out.println("Hello, World!");\n\t}\n}`;
        case 'php':
          return `<?php //php 7.2.24\n\n\techo "Hello, world! "\n\n?>`;
        case 'python':
          return `#Python 2.7.17\n\nprint "Hello, world!"`;
      
        case 'python3':
          return `#Python 3.6.9\n\nprint ("Hello, world!")`;
      
        case 'R':
          return `#R version 3.4.4\n\nprint ("Hello, world!")`;
      
        case 'rust':
          return `//rustc 1.39.0\n\nfn main() {\n\tprintln!("Hello, world!");\n}`;
        case 'perl':
          return `#perl 5.26.1 \n\nprint "Hello World\n";`;
        case 'go':
          return `//go 1.10.4\n\npackage main\nimport "fmt"\n\nfunc main() {\n\tfmt.Printf("hello, world\n")\n}`;
        default:
          return '//type your code here ...';
      }
    }

    function exSetTitle(value) {
      document.title = "Compaile cpp online";

        document.getElementById('heading').innerHTML = document.title;

        if(localStorage.lang!=''){
          $('#selectedLanuage').value =localStorage.lang         
          myCodeMirror.setValue(localStorage.code);
        }
        else{
          localStorage.lang = value ='cpp';
          // localStorage.code = getDefaultCode(value);
          myCodeMirror.setValue(`//g++  7.4.0\n\n#include <bits/stdc++.h>\nusing namespace std;\n\nint main()\n{\n\cout<<"Hello, world!\\n";\n}`);
        }
    }

    function setTitle(value){

        document.title = "Compaile " + lang[value] +" online";
        document.getElementById('heading').innerHTML = document.title;
        if(localStorage.lang==value){          
          myCodeMirror.setValue(localStorage.code);
          myCodeMirror.setMode(value)
        }
        else{
          localStorage.lang = value;
          localStorage.code = getDefaultCode(value);        
          myCodeMirror.setValue(localStorage.code);
          myCodeMirror.setMode(value)
        } 

    }

  
