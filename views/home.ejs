      }
  
      .container {
      display: inline;
      position: relative;
      padding-left: 35px;
      margin-bottom: 12px;
      cursor: pointer;
      -webkit-user-select: none;
      -moz-user-select: none;
      -ms-user-select: none;
      user-select: none;
      }
      .container input {
      position: absolute;
      opacity: 0;
      cursor: pointer;
      height: 0;
      width: 0;
      }
      .checkmark {
      position: absolute;
      top: 0px;
      left: 0px;
      height: 15px;
      width: 15px;
      background-color: #eee;
      }
      .container:hover input ~ .checkmark {
      background-color: #7a7a7a;
      }
      .container input:checked ~ .checkmark {
      background-color: #0a0a0a;
      }
      .checkmark:after {
      content: "";
      position: absolute;
      display: none;
      }
      .container input:checked ~ .checkmark:after {
      display: inline;
      }
      .container .checkmark:after {
      left: 4.5px;
      top: 0px;
      width: 5px;
      height: 10px;
      border: solid white;
      border-width: 0 2.5px 2.5px 0;
      -webkit-transform: rotate(45deg);
      -ms-transform: rotate(45deg);
      transform: rotate(45deg);
      }
  
      #input:focus{
        outline: none;
        resize: none;
      }
      a{
        color: grey;
      }
  
